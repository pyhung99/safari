<% if !user_signed_in? %>
  <div class="jumbotron">
    <h3>Your Favorite Safari Animals!</h3>
    <p> Only $10 to rent a Safari Suit for the weekend! </p>
    <p><%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
        <center> <h3> <%= movie.title %> </h3> </center>
      </div>
    </div>
  <% end %>
</div>